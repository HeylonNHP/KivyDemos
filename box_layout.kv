BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'

    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint: 0.25,1
            text: 'Clear'
            on_press: app.handle_clear()

        TextInput:
            size_hint: 1, 1
            id: input_name
            text: ''

    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint: 0.25, 1
            on_press: app.handle_greet()
            text: 'Greet'

        Label:
            size_hint: 1, 1
            id: output_label
            text: 'Enter Your Name'
            color: (1,1,0,1)